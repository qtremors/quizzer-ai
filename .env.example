# ===========================================
# Quizzer AI - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# --- Required ---
SECRET_KEY=your-super-secret-key-change-in-production
GEMINI_API_KEY=your-google-ai-api-key

# --- Production Only (Render) ---
# DATABASE_URL is auto-provided by Render PostgreSQL
DATABASE_URL=postgres://user:password@host:5432/dbname
ALLOWED_HOSTS=your-domain.onrender.com
RENDER_EXTERNAL_HOSTNAME=your-domain.onrender.com

# --- Superuser Auto-Creation (Render build) ---
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_PASSWORD=your-secure-password

# --- Optional ---
DJANGO_LOG_LEVEL=INFO
DEFAULT_AI_MODEL=gemini-flash-latest
QUIZ_RATE_LIMIT=10/m
